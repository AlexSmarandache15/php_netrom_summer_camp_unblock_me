{% extends 'base.html.twig' %}

{% block title %}LicensePlate index{% endblock %}

{% block body %}
    <h1>Vehicles: </h1>

    <table class="table table-sm">
        <thead>
        <tr>
            <th>ID</th>
            <th>License Plate</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for license_plate in license_plates %}
            <tr>
                <td>
                    <a class="btn btn-warning">{{ loop.index }}</a>
                </td>
                <td>
                    <a class="btn btn-warning"> {{ license_plate.licensePlate }} </a>
                </td>
                <td>
                    <a class="btn btn-primary" href="{{ path('license_plate_edit', {'id': license_plate.id}) }}">Edit</a>
                    <a class="btn btn-primary" href="{{ path('license_plate_delete', {'id': license_plate.id}) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <button onclick="location.href='/license/plate/new'" type="button" class="btn btn-success">Add a new vehicle</button>
    <a class="btn btn-success" href="{{ path('home') }}">Back to Home</a>
{% endblock %}