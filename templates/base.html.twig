<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    {% endblock %}

    {% block javascripts %}
        {#{{ encore_entry_script_tags('app') }}#}
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
    {% endblock %}


</head>

<body style="background-color: #FFFFFF">
<nav>
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}" role="alert">
                <b>
                    {{ message }}
                </b>
            </div>
        {%  endfor %}
    {% endfor %}
</nav>
<nav class="navbar sticky-top navbar-dark bg-success navbar-expand-md bg-faded justify-content-center" style="padding: 10px;" >
    <a class="logo"><img style = "max-width: 45px; height: auto" src="https://upload.wikimedia.org/wikipedia/commons/a/ab/Apple-logo.png"></a>
    <a class="navbar-brand d-md-none d-inline" href="">UnblockMe</a>
    <a class="nav-link navbar-brand mx-0 d-none d-md-inline" href="">UnblockMe</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsingNavbar3">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse w-100" id="collapsingNavbar3">
        <ul class="nav navbar-nav ml-auto w-100 justify-content-end">
            {% if app.user is not null %}
                <li class="nav-item">
                    <div class="dropdown">
                        <a class="btn btn-success dropdown-toggle nav-link" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{ app.user.username }}
                        </a>
                        <div class="dropdown-menu" style="right: 0; left: auto;" aria-labelledby="dropdownMenuButton">
                            <a class="dropdown-item" href="{{ path('password_new') }}">Change password</a>
                            <hr class="dropdown-divider">
                            <a class="dropdown-item" href="{{ path('app_logout') }}">Log out</a>
                        </div>
                    </div>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>


<div style="margin-left: 0%; margin-right: 0%; align-content: center; padding: 20px; background-color: #FFFFFF">
    {% block body %}{% endblock %}
</div>



</body>
</html>